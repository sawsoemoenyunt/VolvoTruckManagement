@using VolvoTruckManagement.Model
@using VolvoTruckManagement.Services
@inject ITruckService TruckService

<MudDialog FullWidth="true" >
    <DialogContent>
        <MudForm @ref="form" Model="@Truck" @bind-IsValid="isValid">
            <MudStack Spacing="2">
                <MudTextField @bind-Value="@truckNumber" Label="Truck Number" Variant="Variant.Outlined" ReadOnly="true" Disabled="true"/>
                <MudTextField @bind-Value="Truck.Brand" Label="Brand" Variant="Variant.Outlined" />
                <MudTextField @bind-Value="Truck.VIN" Label="VIN" Variant="Variant.Outlined" />
                <MudTextField @bind-Value="Truck.BuildDate" Label="Build Year" Variant="Variant.Outlined" />
                <MudTextField @bind-Value="Truck.Comment" Label="Comment" Variant="Variant.Outlined" Lines="5"/>
            </MudStack>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Save">Save</MudButton>
        <MudButton Color="Color.Dark" OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    private MudForm form;
    private bool isValid;
    [Parameter] public Truck Truck { get; set; } = new Truck();
    int truckNumber = 0;
    protected override void OnInitialized()
    {
        truckNumber = TruckService.GetNextAvailableUniqueTruckNumber();
        Console.WriteLine(truckNumber);

    }

    private async Task Save()
    {
        await form!.Validate();
        if (isValid)
        {
            Truck truck = new Truck();
            truck.TruckNumber = 1233;
            truck.VIN = "21233333";
            truck.Brand = "Volvo";
            truck.BuildDate = 2025;
            truck.Comment = "New truck";
            TruckService.CreateTruck(truck);
            await form.ResetAsync();
            MudDialog.Close(DialogResult.Ok(true));
        }
    }
    private void Cancel() => MudDialog.Cancel();
}
